    public void init() {
    
        opportunities = new List<Opportunity>();
        String queryString;
        queryString = SlickSidebarFieldSetHelper.createBaseQueryString(new Opportunity(), SObjectType.Opportunity.FieldSets.SlickSidebarRelatedOpportunities.getFields());
        queryString += ' WHERE accountId = \'' + SlickSidebarController.currAccount.Id + '\'';
        queryString += ' ORDER BY CloseDate DESC';
        
        System.debug('SlickSidebarRelatedOpportunities.init() - Service Request query string: ' + queryString); 
        opportunities = Database.query(queryString);

        if (opportunities != null && opportunities.size() > 1) {
            objectName = Opportunity.sObjectType.getDescribe().getLabelPlural();
        } else {
            objectName = Opportunity.sObjectType.getDescribe().getLabel();
        }
    }

