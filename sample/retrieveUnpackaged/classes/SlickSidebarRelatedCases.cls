public class SlickSidebarRelatedCases implements SlickSidebarWidget {

    private String objectName {set;get;}
    public List<Case> cases {set;get;}

    public List<Schema.FieldSetMember> getFieldSetMembers() {
        return SObjectType.Case.FieldSets.SlickSidebarRelatedCases.getFields();
    }

    public String getObjectName() {
        return objectName;      
    }

    public SlickSidebarRelatedCases() {
        if (SlickSidebarController.primaryTabObjectType != null) {
            init();
        }   
    }

    public void init() {
    
        cases = new List<Case>();
        String queryString;
        queryString = SlickSidebarFieldSetHelper.createBaseQueryString(new Case(), SObjectType.Case.FieldSets.SlickSidebarRelatedCases.getFields());
        
        if (SlickSidebarController.currContact != null) {
            queryString += ' WHERE contactId = \'' + SlickSidebarController.currContact.Id + '\'';    
        } else {
            queryString += ' WHERE accountId = \'' + SlickSidebarController.currAccount.Id + '\'';    
        }
        
        //queryString += ' AND (NOT subject like \'%Promo%\' ) ';

        if (SlickSidebarController.currCase != null) {
            // The primary object is a case so dont show the same one in the list
            queryString += ' AND ID != \'' + SlickSidebarController.currCase.Id + '\'';
        }

        queryString += ' ORDER BY CaseNumber DESC LIMIT 5';
        
        System.debug('SlickSidebarRelatedCases.init() - Service Request query string: ' + queryString); 
        cases = Database.query(queryString);

        if (cases != null && cases.size() > 1) {
            objectName = Case.sObjectType.getDescribe().getLabelPlural();
        } else {
            objectName = Case.sObjectType.getDescribe().getLabel();
        }
    }

