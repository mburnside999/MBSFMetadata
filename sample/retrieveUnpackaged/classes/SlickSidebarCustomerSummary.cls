public with sharing class SlickSidebarCustomerSummary {
	public SlickSidebarCustomerSummary() {
        if (SlickSidebarController.primaryTabObjectType != null) {
            init();
        }   
	}

    private String objectName {set;get;}
    public sObject customerInfo {set;get;}

    public List<Schema.FieldSetMember> getFieldSetMembers() {
        if(SlickSidebarController.currLead != null){
            return SObjectType.Lead.FieldSets.SlickSidebarCustomerSummaryLead.getFields();
        }
        else if ( SlickSidebarController.currContact == null ) {
            return SObjectType.Account.FieldSets.SlickSidebarCustomerSummaryAccount.getFields();
        } 
        
        
        
        
        else {
            return SObjectType.Contact.FieldSets.SlickSidebarCustomerSummary.getFields();
            
            
        } 
    }

    public String getObjectName() {
        return 'Customer Summary';
    }

    public void init() {
    
        String queryString;
        if ( SlickSidebarController.currContact != null ) {
            queryString = SlickSidebarFieldSetHelper.createBaseQueryString(new Contact(), SObjectType.Contact.FieldSets.SlickSidebarCustomerSummary.getFields(), SlickSidebarController.currContact.Id);
        } 
        //new
        else if( SlickSidebarController.currLead != null ) {
            queryString = SlickSidebarFieldSetHelper.createBaseQueryString(new Lead(), SObjectType.Lead.FieldSets.SlickSidebarCustomerSummaryLead.getFields(), SlickSidebarController.currLead.Id);            
        }
        
        else {
            queryString = SlickSidebarFieldSetHelper.createBaseQueryString(new Account(), SObjectType.Account.FieldSets.SlickSidebarCustomerSummaryAccount.getFields(), SlickSidebarController.currAccount.Id);            
        } 

        System.debug('SlickSidebarCustomerSummary.init() - query string: ' + queryString); 
        customerInfo = Database.query(queryString);
    }

